<?xml version="1.0"?>

<project name="jspm" default="build" basedir=".">

	<property name="build.file.tag" value="unlabeled" />
	
	<target name="compile">
		<mkdir dir="build/classes" />
		<javac srcdir="src"
				destdir="build/classes"
				deprecation="on"
				debug="on"
				optimize="off">
		</javac>
	</target>
	
	<target name="taskdef" depends="compile">
		<taskdef name="jspm"
				classname="com.exedio.jspm.AntTask"
				classpath="build/classes" />
	</target>
	
	<target name="test.jspm" depends="taskdef">
		<jspm>
			<fileset dir="testsrc" includes="**/*.jspm" />
		</jspm>
	</target>
	
	<target name="jspm" depends="test.jspm" />
	
	<target name="test.compile" depends="test.jspm">
		<mkdir dir="build/testclasses" />
		<javac srcdir="testsrc"
				destdir="build/testclasses"
				deprecation="on"
				debug="on"
				optimize="off">
			<classpath>
				<pathelement location="lib/junit.jar" />
			</classpath>
			<compilerarg value="-Xlint" />
		</javac>
	</target>
	
	<target name="test.run" depends="test.compile">
		<mkdir dir="build/testresults" />
		<junit fork="yes"
				 haltonerror="true" haltonfailure="true"
				 showoutput="true" printsummary="true">
			<formatter type="brief" usefile="false" />
			<formatter type="xml" />
			<classpath>
				<pathelement location="build/testclasses" />
				<pathelement location="lib/junit.jar" />
			</classpath>
			<test name="com.exedio.jspm.test.PackageTest" todir="build/testresults" outfile="jspm" />
			<assertions><enable/></assertions>
		</junit>
	</target>
	
	<target name="test" depends="test.run" />
	
	<target name="jar" depends="compile">
		<jar jarfile="build/exedio-jspm.jar" basedir="build/classes" duplicate="fail">
			<manifest>
				<attribute name="Specification-Title" value="exedio jspm"/>
				<attribute name="Specification-Version" value="${build.tag}"/>
				<attribute name="Specification-Vendor" value="exedio GmbH"/>
				<attribute name="Implementation-Title" value="exedio jspm"/>
				<attribute name="Implementation-Version" value="${build.tag}"/>
				<attribute name="Implementation-Vendor" value="exedio GmbH"/>
			</manifest>
		</jar>
	</target>
	
	<target name="dist.tar">
		<mkdir dir="build" />
		<echo file="build/build.number" message="${build.tag}" />
		<tar destfile="build/exedio-jspm-src-${build.file.tag}.tar.gz"
				compression="gzip">
			<tarfileset file="${basedir}/build/build.number" />
			<tarfileset dir="${basedir}">
				<exclude name=".eclipse-output/**" />
				<exclude name="build/**" />
				<exclude name="cruise/**" />
				<exclude name="**/*_Jspm.java" />
			</tarfileset>
		</tar>
	</target>
	
	<target name="dist.test" depends="dist.tar">
		<delete dir="build/dist-test" />
		<mkdir dir="build/dist-test" />
		<untar src="build/exedio-jspm-src-${build.file.tag}.tar.gz"
				dest="build/dist-test"
				compression="gzip" />
		<ant dir="build/dist-test" target="build" />
	</target>
	
	<target name="dist" depends="dist.tar, dist.test" />
	
	<target name="clean">
		<delete dir="build" />
		<delete>
			<fileset dir="testsrc">
				<include name="**/*_Jspm.java" />
			</fileset>
		</delete>
	</target>

	<target name="build" depends="compile, jar, test" />
	<target name="all" depends="build, dist" />

	<target name="cruise" depends="all">
		<copy todir="${basedir}/cruise">
			<fileset file="${basedir}/build/exedio-jspm.jar" />
			<fileset file="${basedir}/build/exedio-jspm-src-${build.file.tag}.tar.gz" />
		</copy>
	</target>
	
</project>
