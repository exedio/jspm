<?xml version="1.0"?>

<project name="jspm" default="all" basedir=".">

	<target name="compile">
		<mkdir dir="build/classes" />
		<javac srcdir="src"
				destdir="build/classes"
				deprecation="on"
				debug="on"
				optimize="off">
		</javac>
	</target>
	
	<target name="test.jspm" depends="compile">
		<java classname="com.exedio.jspm.Main" taskname="jspm" fork="yes" failonerror="yes">
			<classpath>
				<pathelement location="build/classes" />
			</classpath>
			<arg value="testsrc/com/exedio/jspm/test/Test.jspm" />
		</java>
	</target>
	
	<target name="test.compile" depends="test.jspm">
		<mkdir dir="build/testclasses" />
		<javac srcdir="testsrc"
				destdir="build/testclasses"
				deprecation="on"
				debug="on"
				optimize="off">
			<classpath>
				<pathelement location="../lib/junit.jar" />
			</classpath>
		</javac>
	</target>
	
	<target name="test.run" depends="test.compile">
		<java classname="junit.textui.TestRunner" taskname="junit" fork="yes" failonerror="yes">
			<classpath>
				<pathelement location="build/testclasses" />
				<pathelement location="../lib/junit.jar" />
			</classpath>
			<arg value="com.exedio.jspm.test.PackageTest" />
		</java>
	</target>
	
	<target name="jar" depends="compile">
		<jar jarfile="build/exedio-jspm.jar" basedir="build/classes" />
	</target>
	
	<target name="test" depends="test.run" />
	
	<target name="clean">
		<delete dir="build" />
		<delete>
			<fileset dir="testsrc">
				<include name="**/*_Jspm.java" />
			</fileset>
		</delete>
	</target>

	<target name="all" depends="compile, jar, test" />

</project>
